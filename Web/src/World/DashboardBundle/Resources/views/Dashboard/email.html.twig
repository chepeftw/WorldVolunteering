{% extends '::base.clean.html.twig' %}

{% trans_default_domain 'WorldDashboardBundle' %}

{% block body -%}
    <h1>{{ 'general.contact'|trans }}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'contact.firstname'|trans }}</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>{{ 'contact.lastname'|trans }}</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>{{ 'contact.email'|trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{{ 'contact.phone'|trans }}</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>{{ 'contact.comment'|trans }}</th>
                <td>{{ entity.comment }}</td>
            </tr>
            <tr>
                <th>{{ 'contact.created'|trans }}</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
