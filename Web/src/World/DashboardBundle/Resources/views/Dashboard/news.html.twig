{% if entities is not empty %}

    <h1 class="ui centered header">News</h1>


    {% for entity in entities %}
        <div class="ui vertical segment">
            <div class="ui page grid">
                <div class="column">
                    <h2 class="ui header">{{ entity.name }}</h2>
                    <img class="ui small {% if loop.index0 is even %}left{% else %}right{% endif %} floated image" src="{{ entity.imageWebPath | imagine_filter('thumb_news') }}">
                    <p>
                        {% embed "WorldToolBundle:Base:description.html.twig" with { 'description': entity.description } %} {% endembed %}
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}

{% endif %}