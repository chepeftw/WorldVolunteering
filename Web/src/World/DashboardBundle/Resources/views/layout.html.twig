                </a>

                &nbsp;&nbsp;&nbsp;

                <a href="https://www.twitter.com/cvg_guate" target="_blank">
                    <img height="{{ imageSize }}" width="24" src="{{ asset('bundles/worlddashboard/images/rsz_3twitter_logo_blue.png') }}">
                </a>

                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>

            {#<div class="item">#}
                {#<div class="ui icon input">#}
                    {#<input placeholder="{{ 'menu.search'|trans }}..." type="text">#}
                    {#<i class="search link icon"></i>#}
                {#</div>#}
            {#</div>#}

            {% if is_granted('ROLE_ADMIN') %}
                <a class="item" href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% endif %}
        </div>

    </div>

    <div class="menu yellow line">&nbsp;</div>

