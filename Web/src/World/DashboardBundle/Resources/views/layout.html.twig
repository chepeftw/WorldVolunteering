{% extends '::base.html.twig' %}

{% trans_default_domain 'WorldDashboardBundle' %}

{% block fos_user_content %}{% endblock fos_user_content %}
{% block breadcrumb %}{% endblock %}
{% block login_widget %}{% endblock %}

{% block menu %}

    <div class="ui blue inverted menu">

        <a class="item" href="{{ path('world_dashboard_homepage') }}">
            <i class="home icon"></i> {{ 'menu.home'|trans }}
        </a>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="item" href="{{ path('sonata_admin_dashboard') }}">
                <i class="mail icon"></i> {{ 'menu.admin'|trans }}
            </a>
        {% endif %}

        <div class="right menu">

            <div class="item">
                Siguenos en: &nbsp;&nbsp;&nbsp;
                <a href="https://www.facebook.com/CVGuate">
                    <img height="20" width="20" src="{{ asset('bundles/worlddashboard/images/logos-and-badges_f-logo_online/png/FB-f-Logo__blue_29.png') }}">
                </a>

                &nbsp;&nbsp;&nbsp;

                <a href="https://www.twitter.com/CVGuate">
                    <img height="20" width="25" src="{{ asset('bundles/worlddashboard/images/rsz_3twitter_logo_blue.png') }}">
                </a>
            </div>

            <div class="item">
                <div class="ui icon input">
                    <input placeholder="{{ 'menu.search'|trans }}..." type="text">
                    <i class="search link icon"></i>
                </div>
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                <div class="ui dropdown item">
                    {{ 'menu.user'|trans }}
                    <i class="dropdown icon"></i>
                    <div class="menu">
                        <a class="item" href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>

    </div>

    <div class="menu yellow line">&nbsp;</div>

{% endblock %}

{% block slider %}{% endblock %}

{% block footer %}
    <div class="ui tertiary center aligned segment footer">
        <div><p><small>Trademark and Copyright Notice. WorldVolunteering and its related entities. All rights reserved
                    El uso de este sitio (incluso cualquier parte y componente) constituye su aceptación de estos Términos de Uso y Políticas de Privacidad.</small></p>
        </div>
        <div class="menuLine"></div>
        <div class="mint3logo"><img src="{{ asset('bundles/demidashboard/images/mint3logo.jpg') }}"><p><small>powered by:</small></p></div>
    </div>
{% endblock %}