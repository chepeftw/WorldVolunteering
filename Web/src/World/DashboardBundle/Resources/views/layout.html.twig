{% block menu %}

    <div class="ui blue inverted menu">

        <a class="item" href="{{ path('world_dashboard_homepage') }}">
            <i class="home icon"></i> {{ 'menu.home'|trans }}
        </a>

        <a class="item" href="{{ path('world_dashboard_associations') }}">
