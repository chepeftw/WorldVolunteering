        </a>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="item" href="{{ path('sonata_admin_dashboard') }}">
                <i class="lab icon"></i> {{ 'menu.admin'|trans }}
            </a>
        {% endif %}

        <div class="right menu">

            {% set imageSize = 18 %}

            <div class="item">
                <span class="ui follow text">{{ 'menu.followus'|trans }}&nbsp;&nbsp;&nbsp;</span>
