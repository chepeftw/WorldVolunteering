                <h3 class="ui center aligned header">Age</h3>
                <div class="column">{{ entity.volunteerAge }}</div>
            </div>
        {% endif %}

        {% if entity.commitment is not empty %}
            <div class="row">
                <h3 class="ui center aligned header">Commitment</h3>
                <div class="column">{{ entity.commitment }}</div>
            </div>
        {% endif %}

    </div>



    <h2 class="ui center aligned header">Donations</h2>

    <div class="ui center aligned one column grid">

        {% if entity.donations is not empty %}
            <div class="row">
                <h3 class="ui center aligned header">Donations</h3>
                <div class="column">{{ entity.donations }}</div>
            </div>
        {% endif %}

        {% if entity.donationMethod is not empty %}
            <div class="row">
                <h3 class="ui center aligned header">Method</h3>
                <div class="column">{{ entity.donationMethod }}</div>
            </div>
        {% endif %}

        {% if entity.donationPurpose is not empty %}
            <div class="row">
                <h3 class="ui center aligned header">Purpose</h3>
                <div class="column">{{ entity.donationPurpose }}</div>
            </div>
        {% endif %}

    </div>

