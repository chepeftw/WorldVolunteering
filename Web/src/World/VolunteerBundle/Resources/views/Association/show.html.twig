{% extends 'WorldDashboardBundle::layout.html.twig' %}

{% block body -%}
    <h1 class="ui center aligned header">{{ entity.name }}</h1>

    <div class="ui center aligned one column grid">

        <div class="column">{{ entity.address }}</div>

        <div class="three column row">
            <div class="column">{{ entity.country }}</div>
            <div class="column">{{ entity.state }}</div>
            <div class="column">{{ entity.city }}</div>
        </div>

        <div class="four column row">
            <div class="column">{{ entity.phone }}</div>
            <div class="column">{{ entity.email }}</div>
            <div class="column">{{ entity.founded|date('Y-m-d H:i:s') }}</div>
            <div class="column">{{ entity.operationTime }}</div>
        </div>

    </div>

    <div class="ui center aligned four column grid">
        <div class="row">

            {% if entity.website is not empty %}
                <div class="column">{{ entity.website }}</div>
            {% endif %}

            {% if entity.facebook is not empty %}
                <div class="column">{{ entity.facebook }}</div>
            {% endif %}

            {% if entity.twitter is not empty %}
                <div class="column">{{ entity.twitter }}</div>
            {% endif %}

            {% if entity.instagram is not empty %}
                <div class="column">{{ entity.instagram }}</div>
            {% endif %}

        </div>
    </div>

    {% if entity.aboutUs is not empty %}
        <h2 class="ui center aligned header">About Us</h2>

        <div class="ui center aligned one column grid">
            <div class="column">{{ entity.aboutUs }}</div>
        </div>
    {% endif %}


    {% if entity.whatWeDo is not empty %}
        <h2 class="ui center aligned header">What We Do</h2>

        <div class="ui center aligned one column grid">
            <div class="column">{{ entity.whatWeDo }}</div>
        </div>
    {% endif %}



    <h2 class="ui center aligned header">General Information</h2>

    <div class="ui center aligned one column grid">

        {% if entity.mission is not empty %}
            <div class="row">
                <h3 class="ui center aligned header">Mission</h3>
                <div class="column">{{ entity.mission }}</div>
            </div>
        {% endif %}

        {% if entity.vision is not empty %}
